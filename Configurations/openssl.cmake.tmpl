      defined($ENV{$win_commonenv}) ? $win_commonenv : 'CommonProgramFiles';

  # expand variables early
  $win_installroot = $ENV{$win_installroot};
  $win_commonroot = $ENV{$win_commonroot};

  # Generic overrides for some internal platform file conversion subroutines.

  # To mark forward compatibility, we include the OpenSSL major release version
  # number in the installed shared library names.
  (my $sover_filename = $config{shlib_version}) =~ s|\.|_|g;
  sub shlib_version_as_filename {
      return $sover_filename
  }
  our $sover_dirname = shlib_version_as_filename();

  sub binname {
      return platform::BASE->binname($_[0]);
  }

  sub dsoname {
      return platform::BASE->dsoname($_[0]);
  }

  sub sharedname {
      return platform::BASE::__concat(platform::BASE->sharedname($_[0]),
                                      "_",
                                      shlib_version_as_filename());
  }

  sub staticname {
      return platform::BASE->staticname($_[0]);
  }

  sub sharedlib { return platform::BASE::__concat(platform::BASE->sharedname($_[0]), platform->shlibext()) }
  sub staticlib { return platform::BASE->staticname($_[0]) . platform->libext() }

  sub sharedlib_simple { return undef; }
  sub sharedlib_import { return undef; }

  # Computes a CMake target name.
  sub compute_target_name {
      my $intent = shift;
      my $x = shift;
      if ($intent eq 'lib') {
          return basename(staticname($x));
      } elsif ($intent eq 'shlib') {
          return basename(sharedname($x));
      } elsif ($intent eq 'dso') {
          return basename(dsoname($x));
      } elsif ($intent eq 'bin') {
          return basename(binname($x));
      } elsif ($intent eq 'obj') {
          return basename(staticname($x)) . "_object";
      } else {
          return basename(staticname($x));
      }
      return undef;
  }

  '';
-}

